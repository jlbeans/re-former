<% if @user.errors.any? %>
  <div>
    <ul>
      <% @user.errors.each do |error| %>
        <li><%=error.full_message %></li>
      <%end%>
    </ul>
  </div>
<%end%>

<%= form_with model: @user do |form| %><br>
  <div>
    <%= form.label "Enter your username:" %>
    <%= form.text_field :username, :value=> 'Jjovi'%> <br>
    <%= form.label :email %>
    <%= form.email_field :email, placeholder: 'email@mail.com'  %> <br>
    <%= form.label :password %>
    <%= form.password_field :password %> <br>
    <%= form.submit %>
  </div>
<% end %>
